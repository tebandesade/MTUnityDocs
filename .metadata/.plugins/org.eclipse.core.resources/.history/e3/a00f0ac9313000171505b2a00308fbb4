package MT;

import java.util.ArrayList;

public class Grams 
{
	private ArrayList<String> eng;
	private ArrayList<String> esp;
	public Grams(ArrayList<String> arEng,ArrayList<String> arEsp,int size)
	{
		eng = new ArrayList<String>();
		esp = new ArrayList<String>();
	}
	
	public void operate(ArrayList<String> arEng, ArrayList<String> arEsp)
	{
		int min = Math.min(arEng.size(), arEsp.size());
		int remainder = min%3;
		if(remainder>0)
		{
			
		}
		else
		{
			int i; 
			for(i=0; i<min;i++)
			{
				//Stringbuilder
				String[] ingles = new String[3];
				String[] spanish = new String[3];
				
				ingles[i] = clean(arEng.get(i));
				spanish[i]= arEsp.get(i);
				i++;
				ingles[i] = arEng.get(i);
				spanish[i]= arEsp.get(i);
				i++;
				ingles[i] = arEng.get(i);
				spanish[i]= arEsp.get(i);
			}
			
		}
		
	}
	public void clean(String text)
	{
		text.substring(0, text.length()-2);
	}
}
