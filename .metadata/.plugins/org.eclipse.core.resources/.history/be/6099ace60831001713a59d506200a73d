package IBMModel1;

public class Alignment 
{
	private int l;
	private int m;
	
	public Alignment(int le,int me)
	{
		l =le;
		m =me;
	}
	
	//In IBM model 1 all allignments a are equally likely
	//This will get us off the ground. It is simple.
	//p(a|(e,m))
	public double probAlem()
	{
		return (1/(Math.pow((l+1), m)));
	}
}
